{% extends "MedicalGeneralBundle:Default:layout.html.twig" %}

{% block content %}
    <h1>Condition</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            {% if entity.symptoms|length %}
            <tr>
                <th>Symptoms({{ entity.symptoms|length }})</th>
                <td>
                    <ul>
                        {% for symptom in entity.symptoms %}
                            <li><a href="{{ path('symptom_show', {'id': symptom.id}) }}">{{ symptom.name }}</a> </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        {% endif %}
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('condition') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('condition_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
