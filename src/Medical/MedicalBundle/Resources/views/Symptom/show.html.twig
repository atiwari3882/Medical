{% extends "MedicalGeneralBundle:Default:layout.html.twig" %}

{% block content %}
    <h1>Symptom</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            {% if entity.conditions|length %}
                <tr>
                    <th>Conditions({{ entity.conditions|length }})</th>
                    <td>
                        <ul>
                            {% for condition in entity.conditions %}
                                <li><a href="{{ path('condition_show', {'id': condition.id}) }}">{{ condition.name }}</a> </li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            {% endif %}
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('symptom') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('symptom_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
